<p id="notice"><%= notice %></p>

<%= link_to 'Sign in with Spotify', '/auth/spotify' %>
<%= link_to 'Update Pls', '/playlist/update_all', :method => :patch %>

<h1>Playlists</h1>

<table>
  <thead>
    <tr>
      <th>Uri</th>
      <th>Name</th>
      <th>Creator</th>
      <th>Owner</th>
      <th>Tracking</th>
      <th>Gen new list</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.uri %></td>
        <td><%= playlist.name %></td>
        <td><%= playlist.creator %></td>
          <td><%= playlist.owner %></td>
        <td><%= playlist.tracking %></td>
        <td><%= playlist.gen_new_list %></td>
        <td><%= playlist.ptype %></td>
        <td><%= link_to 'Show', playlist %></td>
        <td><%= link_to 'Edit', edit_playlist_path(playlist) %></td>
        <td><%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Playlist', new_playlist_path %>
